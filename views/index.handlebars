<br>
  <div>
    <form id="create-form">
      <h1>Big Burger Joint</h1>
      <h3>Order a new burger?</h3>
      <div>
        <input type="text" id="bu" name="name">
      </div>
      <button type="submit">Add Burger</button>
    </form>
  </div>
  <br>


    <div>
      <h1>Whats on the plate?</h1>
    </div>
    <div>
      <!-- if all burgers devoured, then none left in left column - display 'all gone' -->
      {{#if eaten}}
      <h4>All gone!</h4>
      {{/if}}
      <!-- if burgers available, then loop and fill in information for list -->
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

  <div>
    <div>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/eaten_block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div>
    <div>
      <h2>Burgers you've eaten!</h2>
    </div>
    <div>
      <!-- if no burgers available, then loop and fill in information for devoured list -->
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>


</div>