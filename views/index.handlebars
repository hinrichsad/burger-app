</header>


<body>
  <div class="container bg">

  <div class="row">
    <div class="center col-sm-12">
      <h1>Eat-Da-Burger App</h1>
      <p></p>
    </div>
  </div>
  <div>
  <div class="row">
    <div class="center col-sm-12">

      <h2>Add A Burger!</h2>

      <form action="/" method="POST">

        <div class="form-group" style="position: absolute;">
          <p>Enter a custom burger you want to order and click the burger button to add your order.</p>
          <input type="text" id="ca" name="burger_name" style="display: flex;">
          <button type="submit" style="display: flex; padding: 0; border: none; background: none;"><img src= "/assets/img/hamburger.png"></button>
          <input type="hidden" name="devoured" value="0">
        </div>
      </form>

    </div>

  </div>
<div style="
  position: relative;
  width: 80%;
  top: 20em;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #eeeeee;">
  <div class="row shadowed-div">
    <div class="col-sm-6" style="  border-right-style: solid;
border-right-color: #eeeeee;">

      <br>
      <h2>Burgers Available To Eat!</h2>

      <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
        <li>
          {{this.id}}
          {{this.burger_name}}

        <span><button class="change-devour" data-id="{{id}}" data-newdevour=true>
          {{#if devoured}}devoured!{{else}}devour me!{{/if}}
        </button></span>

        </li>
        {{/unless}}
        {{/each}}
      </ul>

    </div>

    <div class="col-sm-6">

      <h2>Burgers That Have Been Eaten!</h2>

      {{#each burgers}}
      {{#if this.devoured}}

      <li>

        {{this.id}}
        {{this.burger_name}}

      </li>

      {{/if}}
      {{/each}}

    </div>

  </div>
</div>
</div>
</div>

