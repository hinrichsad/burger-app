<div class="container bg">

  <div class="row">
    <div class="center col-sm-12">
      <img src="/assets/img/hamburger.png" alt="Eat-Da-Burger App">
      <h1>Eat-Da-Burger App</h1>
      <p></p>
    </div>
  </div>



  <div class="row">
    <div class="center col-sm-12">

      <h2>Add A Burger!</h2>

      <form action="/" method="POST">

        <div class="form-group">
          <p>Enter a custom burger you want to order and click the Submit button to add your order.</p>
          <input type="text" id="ca" name="burger_name">
          <input type="hidden" name="devoured" value="0">
        </div>

        <button class="btn-primary" type="submit">Submit Order</button>
      </form>

    </div>

  </div>

  <div class="row">
    <div class="col-sm-6">

      <br>
      <h2>Burgers Available To Eat!</h2>

      <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
        <li>
          {{this.id}}
          {{this.burger_name}}

        <span><button class="change-devour" data-id="{{id}}" data-newdevour=true>
          {{#if devoured}}devoured!{{else}}devour me!{{/if}}
        </button></span>

        </li>
        {{/unless}}
        {{/each}}
      </ul>

    </div>

    <div class="col-sm-6">

      <h2>Burgers That Have Been Eaten!</h2>

      {{#each burgers}}
      {{#if this.devoured}}

      <li>

        {{this.id}}
        {{this.burger_name}}

      </li>

      {{/if}}
      {{/each}}

    </div>

  </div>
</div>

<script src=".\assets\js\burger.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>